@model CityWeather

<!DOCTYPE html>
<head>
    <title>@Model.CityName City Weather</title>
    <meta charset="utf-8"/>
    <link href="~/stylesheet.css" rel="stylesheet" />
</head>
<body>
    <h1 class="margin-left">Weather</h1>
    <div class="margin-top-200">
        <div class="box flex-borderless margin-auto w-30">
            <span class="inline-block w-50">
                <h2>@Model.CityName</h2>
                <h4 class="text-grey">@Views__ViewImports.GetDayMonthYear(Model.DateAndTime)</h4>
                <h4 class="text-dark-grey">@Views__ViewImports.GetTime(Model.DateAndTime)</h4>
            </span>
            <span class="inline-block border-left padding-left-45">
                <h2>@Model.TemperatureFahrenheit <sup class="text-grey"><sup>o</sup>F</sup></h2>
                <br>
                <br>
            </span>
        </div>
        <div class="text-center">
            <a href="~/">Back to Weather Home Page</a>
        </div>
    </div>
</body>